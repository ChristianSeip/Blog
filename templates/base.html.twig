<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>seip.io - {% block title %}Blog{% endblock %}</title>
    <link rel="stylesheet" href="https://fonts.seip.io/Lato/all.css">
    <link rel="stylesheet" href="https://fonts.seip.io/Font-Awesome/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('styles/main.css') }}">
    {% block stylesheets %}{% endblock %}
</head>

<body>
<div class="page-outer-container">
  <header class="page-header">
    <h1>
        <a href="{{ path('app_index') }}">
            <img class="logo" src="{{ asset('images/logo_small.png') }}" alt="Page Logo">
        </a>
    </h1>
    <div class="search-container">
      <form method="get" action="/posts/search">
        <input type="text" name="keyword" placeholder="Search..." value="{{ app.request.query.get('keyword') }}">
        <button type="submit" class="btn btn-primary">Search</button>
      </form>
    </div>
    <nav>
        <a href="javascript:void(0)" class="menu-link" onclick="switchMobileMenu()"><i class="fas fa-bars"></i></a>
        <ul class="inline-list menu-dropdown">
            {% if get_user() is not null %}
                <li><a href="{{ path('app_user_cp') }}">UCP</a></li>
                <li><a href="{{ path('app_logout') }}">Logout</a></li>
            {% else %}
                <li><a href="{{ path('app_user_registration') }}">Register</a></li>
                <li><a href="{{ path('app_login') }}">Login</a></li>
            {% endif %}
        </ul>
    </nav>
  </header>
  <div class="flash-messages">
      {% for label, messages in app.flashes %}
          {% for message in messages %}
              <div class="flash-message alert {{ label }}">
                  {{ message }}
                  <button class="close" onclick="this.parentElement.style.display='none';">Ã—</button>
              </div>
          {% endfor %}
      {% endfor %}
  </div>
  <div class="content-boundary">
    <div class="content-wrapper">
      <main class="main-content-wrapper">
        {% block body %}{% endblock %}
      </main>
      <div class="sidebar">
          {% block sidebar %}{% endblock %}
      </div>
    </div>
  </div>
  <footer class="page-footer">
    <div class="page-footer-wrapper">
      <address class="copyright"><a href="https://www.seip.io">Copyrigh &copy; 2024 seip.io</a></address>
      <nav class="footer-navigation">
        <ul class="inline-list">
          <li><a href="https://www.seip.io/legal-notice">Legal Notice</a></li>
          <li><a href="https://www.seip.io/privacy">Privacy</a></li>
        </ul>
      </nav>
    </div>
  </footer>
</div>
<script>
  function switchMobileMenu()
  {
    const menuDropdown = document.querySelector('.menu-dropdown');
    menuDropdown.classList.toggle('show');
  }
</script>
</body>
</html>